@using Microsoft.AspNetCore.Identity
@using ST.WinIot.App.Web.UI
@using ST.WinIot.App.Web


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="@Url.Action("Logout", "Home", new { returnUrl = Url.Action("Index", "Home") })" title="Manage">
                Logout
            </a>
        </li>
    }
    else
    {
        @*<li class="nav-item">
                <a class="nav-link text-dark" href="@ST.WinIot.App.Web.Config.Urls.">Register</a>
            </li>*@
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Home/Login">Login</a>
        </li>
    }
</ul>